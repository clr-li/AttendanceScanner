{
  "name": "attendance_scanner",
  "version": "0.1.0",
  "description": "QR code based attendance with SQLite, Express, Firebase Auth, and Braintree",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "DEVELOPMENT=true PORT=3000 node -r dotenv/config server.js",
    "fire": "node -r dotenv/config deploy.js",
    "glitch": "git checkout master && git pull origin main --no-rebase -no-edit && git push glitch --force && git push origin master",
    "deploy": "npm run glitch && npm run fire"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "braintree": "^3.13.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.3.0",
    "firebase-tools": "^11.16.0",
    "sqlite3": "^5.1.2",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": "14.x"
  },
  "repository": {
    "url": "https://github.com/clr-li/AttendanceScanner"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch"
  ],
  "devDependencies": {
    "dotenv": "^16.0.3"
  }
}
